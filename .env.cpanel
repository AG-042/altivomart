# cPanel Production Environment Variables

# Basic Django Settings
SECRET_KEY=your-50-character-random-secret-key-here-change-this
DEBUG=False

# Domain Configuration (replace with your actual domain)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://your-frontend-domain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://your-frontend-domain.com

# cPanel MySQL Database (get these from cPanel â†’ MySQL Databases)
CPANEL_MYSQL=True
DB_NAME=your_cpanel_database_name
DB_USER=your_cpanel_database_user
DB_PASSWORD=your_cpanel_database_password
DB_HOST=localhost
DB_PORT=3306

# Email Settings (use your cPanel email or external SMTP)
EMAIL_HOST=mail.yourdomain.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_USE_TLS=False
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Security Settings for Production
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# URLs
TRACKING_BASE_URL=https://yourdomain.com/track
