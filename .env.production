# Production Environment Variables for Django Backend

# Security Settings
SECRET_KEY=your-production-secret-key-needs-to-be-50-chars-long-and-random
DEBUG=False

# Allowed Hosts (update with your domain)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-railway-app.railway.app

# Database (Railway/Heroku will provide DATABASE_URL)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Email Settings
EMAIL_HOST=mail.spacemail.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_USE_TLS=False
EMAIL_HOST_USER=altivomart@altivomart.com
EMAIL_HOST_PASSWORD=Newpass2323@
DEFAULT_FROM_EMAIL=noreply@altivomart.com
SERVER_EMAIL=noreply@altivomart.com

# CORS Settings (update with your frontend URL)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://your-vercel-app.vercel.app
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://your-vercel-app.vercel.app

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Tracking URL (update with your frontend domain)
TRACKING_BASE_URL=https://yourdomain.com/track
